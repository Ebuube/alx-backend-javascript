" Enable filetype-specific settings
filetype plugin indent on

" Set the number of spaces for each level of indentation for Javascript files
autocmd FileType javascript setlocal shiftwidth=2
autocmd FileType javascript setlocal softtabstop=2
autocmd FileType javascript setlocal expandtab


" Set specific settings for TypeScript files
autocmd FileType typescript setlocal shiftwidth=2
autocmd FileType typescript setlocal softtabstop=2
autocmd FileType typescript setlocal expandtab

" Set specific settings for Html files
autocmd FileType html setlocal shiftwidth=4
autocmd FileType html setlocal softtabstop=4
autocmd FileType html setlocal expandtab


" Set specific settings for CSS files
autocmd FileType css setlocal shiftwidth=4
autocmd FileType css setlocal softtabstop=4
autocmd FileType css setlocal expandtab
